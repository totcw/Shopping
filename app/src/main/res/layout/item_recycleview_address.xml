<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:id="@+id/linear_item_address"
    android:background="@color/backgroudGray"
    android:layout_height="wrap_content">
    <LinearLayout
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:background="#ffffff"
        android:paddingTop="10dp"
        android:paddingLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_address_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="小李"
            android:textColor="@color/shouye_renmen_tv"
            android:textSize="14sp" />
        <TextView
            android:layout_marginLeft="15dp"
            android:id="@+id/tv_address_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:text="13337226464"
            android:textColor="@color/shouye_renmen_tv"
            android:textSize="14sp" />

        <TextView
            android:visibility="gone"
            android:layout_marginLeft="15dp"
            android:padding="3dp"
            android:id="@+id/tv_address_moren"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:background="@drawable/shape_corner_red"
            android:text="默认"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <TextView
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:id="@+id/relative_item_address"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:background="@mipmap/bianji"

                />
        </RelativeLayout>


    </LinearLayout>

    <TextView
        android:padding="10dp"
        android:background="#ffffff"
        android:id="@+id/tv_address_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="收货的地址"

        android:textColor="@color/shouye_lv_tv"
        android:textSize="13sp" />
    <TextView
        android:paddingLeft="10dp"
        android:paddingBottom="10dp"
        android:background="#ffffff"
        android:id="@+id/tv_address_address2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:text="详细地址"
        android:textColor="@color/shouye_lv_tv"
        android:textSize="13sp" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divierLine"
        ></View>
</LinearLayout>
