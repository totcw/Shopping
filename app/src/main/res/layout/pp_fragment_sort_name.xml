<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#6f000000"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/linear_sort_name_shaixuan"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_pp_sort_name_chose"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <LinearLayout
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="清空"
                android:minHeight="30dp"
                android:background="@drawable/shape_corner_white_gray"
                />
            <TextView
                android:minHeight="30dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_corner_white_gray"
                android:text="确定"
                />
        </LinearLayout>
        <View
            android:background="@color/divierLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
    </LinearLayout>


    <LinearLayout

        android:orientation="vertical"
        android:id="@+id/linear_sort_name_shaixuan_type"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.RecyclerView
            android:background="#ffffff"
            android:id="@+id/rv_pp_sort_name_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>
        <LinearLayout
            android:id="@+id/linear_pp_sort_name_price"
            android:visibility="gone"
            android:orientation="horizontal"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价格区间:"
                android:textColor="@color/shouye_renmen_tv"
                android:textSize="14sp"
                />
            
            <EditText
                android:id="@+id/et_pp_sort_name_start"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:minHeight="30dp"
                android:layout_height="wrap_content"
                android:hint="起始价格"
                android:textSize="12sp"
                android:background="@drawable/shape_corner_white_gray"
                /> 
            <View
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@color/divierLine"
                android:layout_width="10dp"
                android:layout_height="1dp"></View>
            
            <EditText
                android:id="@+id/et_pp_sort_name_end"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:minHeight="30dp"
                android:layout_height="wrap_content"
                android:hint="终止价格"
                android:background="@drawable/shape_corner_white_gray"
                />

            <TextView
                android:id="@+id/tv_pp_sort_name"
                android:layout_marginLeft="5dp"
                android:minHeight="30dp"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="确定"
                android:background="@drawable/shape_corner_white_gray"
                />

        </LinearLayout>
        <View
            android:background="@color/divierLine"
            android:layout_width="match_parent"
            android:layout_height="1dp"></View>
    </LinearLayout>



</FrameLayout>
