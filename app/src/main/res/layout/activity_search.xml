<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical">

    <include layout="@layout/layout_search"></include>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divierLine"></View>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <ImageView
                    android:layout_width="13dp"
                    android:layout_height="18dp"
                    android:background="@mipmap/search_renmen" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:text="热门搜索"
                    android:textColor="@color/activityMainPressed"
                    android:textSize="13sp" />

            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_search_remen"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:overScrollMode="never">

            </android.support.v7.widget.RecyclerView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="30dp"
                android:gravity="center_vertical"
                android:paddingLeft="14dp"
                android:paddingRight="14dp">

                <ImageView
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:background="@mipmap/search_jilu" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="13dp"
                    android:layout_weight="1"
                    android:text="搜索记录"
                    android:textColor="@color/activityMainPressed"
                    android:textSize="13sp" />

                <ImageView
                    android:id="@+id/iv_search_delete"
                    android:layout_width="15dp"
                    android:layout_height="16dp"
                    android:background="@mipmap/search_delete" />

            </LinearLayout>


            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_search_jilu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:overScrollMode="never">

            </android.support.v7.widget.RecyclerView>
        </LinearLayout>

        <include layout="@layout/layout_recycleview"></include>
    </FrameLayout>
</LinearLayout>
