<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
  <com.betterda.shopping.widget.NormalTopBar
      android:id="@+id/topbar_name"
      android:layout_width="match_parent"
      android:layout_height="wrap_content">

  </com.betterda.shopping.widget.NormalTopBar>


    <RelativeLayout
        android:layout_marginTop="20dp"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <EditText
            android:layout_marginLeft="10dp"
            android:id="@+id/et_name_name"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textSize="14sp"
            android:hint="请输入昵称"
            android:background="@null"
            android:textColor="@color/shouye_renmen_tv"
            />

    </RelativeLayout>


    <Button
        android:id="@+id/btn_editname_name"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_corner_red"
        android:text="保存"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="48dp" />




</LinearLayout>
