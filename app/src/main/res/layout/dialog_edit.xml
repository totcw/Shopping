<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_marginLeft="72dp"
    android:layout_marginRight="72dp"
    android:layout_marginTop="36dp"
    android:layout_marginBottom="36dp"
    android:minHeight="100dp"
    android:minWidth="260dp"
    android:gravity="center"
    android:background="@drawable/shape_bottom_top_line"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:paddingTop="30dp"
        android:paddingBottom="30dp"
        android:layout_height="wrap_content">

        <TextView
            android:layout_centerHorizontal="true"
            android:id="@+id/tv_edit_daijinjuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="可用代金卷:0.0"
            />

        <EditText
            android:padding="10dp"
            android:layout_marginTop="15dp"
            android:layout_below="@id/tv_edit_daijinjuan"
            android:gravity="center"
            android:minHeight="48dp"
            android:minWidth="100dp"
            android:inputType="number"
            android:background="@drawable/shape_bottom_top_line"
            android:id="@+id/et_dialog_call_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/shouye_renmen_tv"
            android:textSize="@dimen/textsize_small"
            android:hint="请输入代金卷金额"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/lv_divider"
        ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_dialog_call_quxiao"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="取消"
            android:textSize="@dimen/textsize_xlarge"
            android:textColor="@color/shouye_fenlei_red"
            />
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="@color/lv_divider"
            ></View>
        <Button
            android:id="@+id/btn_dialog_call_comfrim"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:background="@null"
            android:text="确定"
            android:textSize="@dimen/textsize_xlarge"
            android:textColor="@color/shouye_fenlei_red"
            />

    </LinearLayout>

</LinearLayout>
