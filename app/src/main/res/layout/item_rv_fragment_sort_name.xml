<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/linear_item_sort_name"
    android:layout_height="wrap_content"
    android:background="#ffffff"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_sort_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        card_view:contentPadding="5dp"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardBackgroundColor="#ffffff"
        card_view:cardCornerRadius="8dp"
        card_view:cardElevation="4dp"
        card_view:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.betterda.mylibrary.view.RatioLayout

                android:id="@+id/ratio_sort_name"

                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:ratio="1">

                <ImageView
                    android:layout_gravity="center"
                    android:id="@+id/sv_item_duobao"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    android:src="@mipmap/zwt"
                    />

            </com.betterda.mylibrary.view.RatioLayout>
            <TextView
                android:layout_below="@id/ratio_sort_name"
                android:id="@+id/tv_item_sort_name"
                android:layout_marginTop="1dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="商品名"
                android:textSize="13sp"
                android:textColor="@color/shouye_renmen_tv"

                />
            <TextView
                android:layout_below="@id/tv_item_sort_name"
                android:id="@+id/tv_item_sort_account"
                android:layout_marginTop="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="750/瓶"
                android:textSize="11sp"
                android:textColor="@color/sortGray"

                />

            <TextView
                android:layout_marginTop="2dp"
                android:layout_below="@id/tv_item_sort_account"
                android:id="@+id/tv_item_sort_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="￥129"
                android:textSize="12sp"
                android:textColor="@color/shouye_renmen_tv"

                />
            <LinearLayout
                android:orientation="horizontal"
                android:layout_below="@id/tv_item_sort_money"
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_weight="1"
                    android:id="@+id/tv_item_sort_moneymember"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:text="会员价:￥129"
                    android:textSize="12sp"
                    android:textColor="@color/shouye_fenlei_red"

                    />

                    <ImageView
                        android:layout_marginRight="5dp"
                        android:id="@+id/iv_item_sort_name_add"
                        android:layout_width="23dp"
                        android:layout_height="23dp"
                        android:background="@mipmap/add"
                        />

            </LinearLayout>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>
