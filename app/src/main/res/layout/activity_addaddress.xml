<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <com.betterda.shopping.widget.NormalTopBar
        android:id="@+id/topbar_addaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.betterda.shopping.widget.NormalTopBar>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"

        android:background="@color/lv_divider"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#ffffff"
        android:paddingLeft="16dp">

        <EditText
            android:id="@+id/et_name"
            android:textColor="@color/shouye_renmen_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="收货人姓名"
            android:singleLine="true"
            android:textSize="12sp" />

    </RelativeLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/lv_divider"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#ffffff"
        android:paddingLeft="16dp">

        <EditText
            android:id="@+id/et_number"
            android:textColor="@color/shouye_renmen_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="手机号码"
            android:singleLine="true"
            android:textSize="12sp" />

    </RelativeLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/lv_divider"></View>

    <RelativeLayout
        android:id="@+id/relative_addaddress_province"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#ffffff"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/tv_address"
            android:textColor="@color/shouye_renmen_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="所在区域"
            android:singleLine="true"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@mipmap/jiantou" />

    </RelativeLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/lv_divider"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#ffffff"
        android:paddingLeft="16dp">

        <EditText
            android:id="@+id/et_address2"
            android:textColor="@color/shouye_renmen_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="详细地址"
            android:singleLine="true"
            android:textSize="12sp" />

    </RelativeLayout>
    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/lv_divider"></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#ffffff"
        android:paddingLeft="16dp">

        <TextView
            android:textColor="@color/shouye_renmen_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:text="设为默认地址"
            android:singleLine="true"
            android:textSize="12sp" />


        <com.zcw.togglebutton.ToggleButton
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_width="54dp"
            toggle:tbOnColor="#f75555"
            toggle:tbOffColor="#d7d7d7"
            toggle:tbSpotColor="#ffffff"
            android:layout_height="30dp" >
        </com.zcw.togglebutton.ToggleButton>


    </RelativeLayout>
    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/lv_divider"></View>

    <Button
        android:id="@+id/btn_address_moren"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/shape_corner_red"
        android:text="设为默认地址"
        android:textColor="#ffffff"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="48dp" />


</LinearLayout>
