<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:toggle="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_gray"
    android:orientation="vertical">

    <com.betterda.shopping.widget.NormalTopBar
        android:id="@+id/topbar_addaddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </com.betterda.shopping.widget.NormalTopBar>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"

        android:background="@color/lv_divider"></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="#ffffff"
                android:paddingLeft="16dp">

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="收货人姓名"
                    android:singleLine="true"
                    android:textColor="@color/shouye_renmen_tv"
                    android:textSize="12sp" />

            </RelativeLayout>

            <View

                android:layout_width="match_parent"
                android:layout_height="1dp"

                android:background="@color/lv_divider"></View>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="42dp"
                android:background="#ffffff"
                android:paddingLeft="16dp">

                <EditText
                    android:id="@+id/et_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:background="@null"
                    android:hint="手机号码"
                    android:singleLine="true"
                    android:textColor="@color/shouye_renmen_tv"
                    android:textSize="12sp" />

            </RelativeLayout>

        </LinearLayout>

        <View

            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:background="@color/lv_divider"></View>


        <RelativeLayout
            android:id="@+id/relative_addaddress_choseconstanct"
            android:background="#ffffff"
            android:layout_width="100dp"
            android:layout_height="match_parent">


            <TextView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="选联系人"
                android:textSize="13sp"
                android:textColor="@color/activityMainNormal"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/chose_constanct"
                />

        </RelativeLayout>

    </LinearLayout>


    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/lv_divider"></View>

    <RelativeLayout
        android:id="@+id/relative_addaddress_province"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#ffffff"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/tv_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:singleLine="true"
            android:text="所在区域"
            android:textColor="@color/shouye_renmen_tv"
            android:textSize="12sp" />

        <ImageView
            android:layout_width="8dp"
            android:layout_height="15dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@mipmap/jiantou" />

    </RelativeLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/lv_divider"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#ffffff"
        android:paddingLeft="16dp">

        <EditText
            android:id="@+id/et_address2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:hint="详细地址"
            android:singleLine="true"
            android:textColor="@color/shouye_renmen_tv"
            android:textSize="12sp" />

    </RelativeLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/lv_divider"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:background="#ffffff"
        android:paddingLeft="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:background="@null"
            android:singleLine="true"
            android:text="设为默认地址"
            android:textColor="@color/shouye_renmen_tv"
            android:textSize="12sp" />


        <com.zcw.togglebutton.ToggleButton
            android:id="@+id/tbtn_addaddress"
            android:layout_width="54dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            toggle:tbOffColor="#d7d7d7"
            toggle:tbOnColor="#f75555"
            toggle:tbSpotColor="#ffffff"></com.zcw.togglebutton.ToggleButton>


    </RelativeLayout>

    <View

        android:layout_width="match_parent"
        android:layout_height="1dp"

        android:background="@color/lv_divider"></View>

    <Button
        android:id="@+id/btn_address_moren"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/shape_corner_red"
        android:text="保存并使用"
        android:textColor="#ffffff"
        android:textSize="16sp" />


</LinearLayout>
