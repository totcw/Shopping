<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <RelativeLayout
        android:background="#00000000"
        android:layout_width="match_parent"
        android:layout_height="115dp">

        <RelativeLayout
            android:background="#ffffff"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <TextView
                android:id="@+id/tv_pp_productdetail_price"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="134dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="￥:1299"
                android:textColor="@color/activityMainPressed"
                android:textSize="15sp"
                />
            <TextView
                android:layout_below="@id/tv_pp_productdetail_price"
                android:id="@+id/tv_pp_productdetail_pricemember"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="134dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="会员价:￥1299"
                android:textColor="@color/shouye_fenlei_red"
                android:textSize="15sp"
                />

            
            <ImageButton

                android:id="@+id/iv_pp_productdetail_delete"
                android:layout_alignParentRight="true"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:background="@null"
                android:src="@mipmap/delete_buy"
                />
            
        </RelativeLayout>

        <ImageView
            android:id="@+id/iv_pp_productdetail_logo"
            android:layout_marginLeft="14dp"
            android:layout_width="100dp"
            android:paddingTop="2dp"
            android:paddingBottom="2dp"
            android:src="@mipmap/zwt"
            android:scaleType="fitCenter"
            android:background="@drawable/shape_corner_white_gray"
            android:layout_height="100dp" />

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/divierLine"
        ></View>


    <RelativeLayout
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="150dp">

        <TextView
            android:layout_centerVertical="true"
            android:layout_marginLeft="14dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量"
            android:textColor="@color/activityMainNormal"
            android:textSize="15sp"
            />

        <com.betterda.shopping.widget.AddAndSub
            android:id="@+id/aas_pp_productdetail_buy"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content">

        </com.betterda.shopping.widget.AddAndSub>

    </RelativeLayout>
    
    <Button
        android:id="@+id/btn_pp_productdetail_buy"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="确认"
        android:background="@color/shouye_fenlei_red"
        android:textColor="#ffffff"
        />

</LinearLayout>
